@page "/choix-programme"
@inject NavigationManager Nav

<div class="app-main">
    <div >

        <!-- Header -->
        <div class="choixprogramme-header">
            <h2 class="choixprogramme-title">🚀 Choisis ton aventure fitness !</h2>
            <p class="choixprogramme-subtitle">Ton parcours, ton rythme, tes résultats</p>
        </div>

        <!-- Programme personnalisé -->
        <div class="choixprogramme-card personalise" @onclick="OnProgrammePersoClick">
            <span class="choixprogramme-icon">🎨</span>
            <h3 class="choixprogramme-card-title"><strong>Programme personnalisé</strong></h3>
            <p class="choixprogramme-description">
                Tu fabriques ton propre super-héros ! Niveau, objectifs, dispo... C’est ton plan, ton style 🧪
            </p>
            <div class="choixprogramme-quote">
                🧑‍🔬 « Je veux du muscle ici, moins de bobo là, et du temps pour Netflix le dimanche »
            </div>
            <button class="choixprogramme-button">🎯 Créer mon programme</button>
        </div>

        <!-- Programme classic -->
        <div class="choixprogramme-card classic" @onclick="OnProgrammeClassicClick">
            <span class="choixprogramme-icon">📚</span>
            <h3 class="choixprogramme-card-title"><strong>Programme classic</strong></h3>
            <p class="choixprogramme-description">
                Les programmes d'entraînement standard faits pour tout le monde, déjà prêts à être utilisés 🧪
            </p>
            <div class="level-indicator">
                <div class="level-dot active"></div>
                <div class="level-dot active"></div>
                <div class="level-dot"></div>
                <div class="level-dot"></div>
            </div>
            <div class="choixprogramme-quote">
                🧑‍🔬 « Je commence maintenant ! »
            </div>
            <button class="choixprogramme-button classic">🚀 Programmes classiques</button>
        </div>

        <!-- Programme de star -->
        <div class="choixprogramme-card premium" @onclick="OnProgrammePredefClick">
            <div class="choixprogramme-badge">⭐ Premium</div>
            <span class="choixprogramme-icon">⭐</span>
            <h3 class="choixprogramme-card-title"><strong>Programme de star</strong></h3>
            <p class="choixprogramme-description">
                T'entraîner comme The Rock, Arnold ou Megan ? Clique, choisis, transpire 💦
            </p>
            <div class="choixprogramme-quote">
                🌟 « Fais-moi transpirer comme Brad Pitt dans Snatch »
            </div>
            <button class="choixprogramme-button premium">💪 Programmes de stars</button>
        </div>

        <!-- Message motivation -->
        <div class="choixprogramme-footer">
            🐣 ou 🐉 ? Peu importe ton niveau… choisis ton style et deviens la star de ton propre film d'action 🎬💥
        </div>

    </div>
</div>

@code {
    private async Task OnProgrammePersoClick()
    {
        await Task.Yield();
        Nav.NavigateTo("/generate-programme");
    }

    private async Task OnProgrammeClassicClick()
    {
        await Task.Yield();
        Nav.NavigateTo("/programmes-predefinis");
    }

    private async Task OnProgrammePredefClick()
    {
        await Task.Yield();
        Nav.NavigateTo("/programmes-star");
    }
}
