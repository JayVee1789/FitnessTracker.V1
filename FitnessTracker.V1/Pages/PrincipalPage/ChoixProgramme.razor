@page "/choix-programme"
@inject NavigationManager Nav

<div class="app-main" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 1rem;">

    <div class="mobile-container">

        <!-- Header -->
        <div class="text-center mb-4">
            <h2 class="session-header text-primary">🚀 aventure fitness !</h2>
            <p class="subtitle">Ton parcours, ton rythme, tes résultats</p>
        </div>

        <!-- Stats -->
        <div class="stats-bar mb-4">
            <div class="stat-item">
                <div class="stat-number">7</div>
                <div class="stat-label">Jours</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">🔥</div>
                <div class="stat-label">Série</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">42</div>
                <div class="stat-label">XP</div>
            </div>
        </div>

        <!-- Programme personnalisé -->
        <div class="program-card clickable-card" @onclick="OnProgrammePersoClick">
            <span class="program-icon">🎨</span>
            <h3 class="program-title"><strong>Programme personnalisé</strong></h3>
            <p class="program-description">
                Tu fabriques ton propre super-héros ! Niveau, objectifs, dispo... C’est ton plan, ton style 🧪
            </p>
            <div class="program-quote">
                🧑‍🔬 « Je veux du muscle ici, moins de bobo là, et du temps pour Netflix le dimanche »
            </div>
            <button class="action-btn">🎯 Créer mon programme</button>
        </div>

        <!-- Programme classic -->
        <div class="program-card beginner clickable-card" @onclick="OnProgrammeClassicClick">
            <span class="program-icon">📚</span>
            <h3 class="program-title"><strong>Programme classic</strong></h3>
            <p class="program-description">
                Les programmes d'entraînement standard faits pour tout le monde, déjà prêts à être utilisés 🧪
            </p>
            <div class="level-indicator">
                <div class="level-dot active"></div>
                <div class="level-dot active"></div>
                <div class="level-dot"></div>
                <div class="level-dot"></div>
            </div>
            <div class="program-quote">
                🧑‍🔬 « Je commence maintenant ! »
            </div>
            <button class="action-btn" style="background: linear-gradient(135deg, #00b894 0%, #00a085 100%);">
                🚀 Programmes classiques
            </button>
        </div>

        <!-- Programme de star -->
        <div class="program-card premium clickable-card" @onclick="OnProgrammePredefClick">
            <div class="premium-badge">⭐ Premium</div>
            <span class="program-icon">⭐</span>
            <h3 class="program-title"><strong>Programme de star</strong></h3>
            <p class="program-description">
                T'entraîner comme The Rock, Arnold ou Megan ? Clique, choisis, transpire 💦
            </p>
            <div class="program-quote">
                🌟 « Fais-moi transpirer comme Brad Pitt dans Snatch »
            </div>
            <button class="action-btn" style="background: linear-gradient(135deg, #fd79a8 0%, #e84393 100%);">
                💪 Programmes de stars
            </button>
        </div>

        <!-- Message de fin -->
        <div class="bottom-message">
            🐣 ou 🐉 ? Peu importe ton niveau… choisis ton style et deviens la star de ton propre film d'action 🎬💥
        </div>

    </div>
</div>

@code {
    private async Task OnProgrammePersoClick()
    {
        await Task.Yield();
        Nav.NavigateTo("/generate-programme");
    }

    private async Task OnProgrammeClassicClick()
    {
        await Task.Yield();
        Nav.NavigateTo("/programmes-predefinis");
    }

    private async Task OnProgrammePredefClick()
    {
        await Task.Yield();
        Nav.NavigateTo("/programmes-star");
    }
}
