            if (ex.ExerciseName == "Repos") continue;

            // ⚠️ Utiliser IsLb (pas AfficherEnLb)
            var poidsKg = ex.IsLb ? ex.PoidsUtilisé * 0.453592 : ex.PoidsUtilisé;

            var entry = new PoidsEntry
