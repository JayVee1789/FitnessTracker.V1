<h3>Visualiser une séance de programme</h3>

<!-- -------------------------------------------------------------
     SECTION 1 : Sélecteurs Programme / Semaine / Jour
-------------------------------------------------------------- -->
<div class="row gy-2 gx-3 mb-4">
    <div class="col-12 col-md-4">
        <label class="form-label">Programme :</label>
        <select class="form-select" @onchange="OnProgrammeSelected">
            <option value="">-- Sélectionner --</option>
            @foreach (var prog in Programmes)
            {
                <option value="@prog.Id">@prog.Nom (@prog.DateDebut.ToShortDateString())</option>
            }
        </select>
    </div>

    @if (SelectedPlanAvailable)
    {
        <div class="col-6 col-md-4">
            <label class="form-label">Semaine :</label>
            <select class="form-select" @onchange="OnSemaineChanged">
                @for (int i = 0; i < SelectedPlan?.Weeks.Count; i++)
                {
                    <option value="@i">Semaine @(i + 1)</option>
                }
            </select>
        </div>

        <div class="col-6 col-md-4">
            <label class="form-label">Jour :</label>
            <select class="form-select" @onchange="OnJourChanged">
                @for (int j = 1; j <= 7; j++)
                {
                    <option value="@j">Jour @j</option>
                }
            </select>
        </div>
    }
</div>

@if (SelectedPlanAvailable)
{
    <button class="btn btn-danger mb-3" data-bs-toggle="modal" data-bs-target="#confirmModal">
        Supprimer ce programme
    </button>
}

<!-- -------------------------------------------------------------
     SECTION 2 : Bouton kg / lb + Cartes exercices
-------------------------------------------------------------- -->
@if (Exercises.Any())
{
    <div class="d-flex justify-content-between align-items-end flex-wrap gap-2 mb-3">
        <h5 class="m-0">Séance du programme sélectionné</h5>
        <button class="btn btn-sm btn-outline-primary" @onclick="ToggleUnite">
            Affichage : @(AfficherEnLb ? "livres (lb)" : "kilos (kg)")
        </button>
    </div>

    <!-- Grille responsive -->
    <div class="row row-cols-1 row-cols-md-2 g-3">
        @foreach (var ex in Exercises)
        {
            @* Marquage “réussi” sur la bordure *@
            var borderClass = ex.ObjectifAtteint ? "border-success" : "";

            <div class="col">
                <div class="card h-100 @borderClass">
                    <!-- HEADER -->
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="fw-semibold">@ex.ExerciseName</span>

                        <a href="#"
                           class="btn btn-sm btn-link text-decoration-none"
                           data-bs-toggle="modal"
                           data-bs-target="#modalRemplacement"
                           @onclick="() => ProposerRemplacement(ex)">
                            changer
                        </a>
                    </div>

                    <!-- BODY -->
                    <div class="card-body text-center">
                        <p class="mb-2">
                            <strong>@ex.Series × @ex.Repetitions</strong> &mdash;
                            Repos&nbsp;: @ex.RestTimeSeconds&nbsp;s
                        </p>
                        <!-- Objectif affiché  (RE-AJOUT) -->
                        @{
                            var objText = AfficherEnLb
                            ? $"{Math.Round(ex.Objectif / 0.453592, 1)} lb"
                            : $"{Math.Round(ex.Objectif, 1)} kg";
                        }
                        <p class="mb-2">
                            <span class="text-secondary">Objectif&nbsp;:</span>
                            <strong>@objText</strong>
                        </p>
                        @* -------- Poids + suffixe ---------- *@
                        @{
                            var suffix = ex.IsLb ? "lb" : "kg";
                        }

                        <div class="d-flex justify-content-center align-items-center gap-2 mb-2">
                            <input type="number"
                                   class="form-control form-control-sm "
                                   style="max-width:120px"
                                   step="0.5"
                                   @bind="ex.PoidsAffiche"
                                   @key="AfficherEnLb.ToString() + ex.ExerciseName" />
                            <span class="text-muted">@suffix</span>

                            @if (ex.Pourcentage1RM > 0)
                            {
                                <span class="badge rounded-pill bg-info">@ex.Pourcentage1RM% 1RM</span>
                            }
                        </div>

                        <button class="btn btn-sm btn-outline-success w-100"
                                @onclick="() => MarquerAtteint(ex)">
                            @((ex.ObjectifAtteint ? "Objectif atteint ✅" : "Marquer atteint"))
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

