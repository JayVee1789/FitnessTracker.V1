@page "/analyse"
@using FitnessTracker.V1.Models
@using FitnessTracker.V1.Services
@inject PoidsService PoidsService

<h3>Analyse des Performances</h3>

@if (analyse is null)
{
    <p>Chargement…</p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <h4>💪 Exercices les plus forts</h4>
            <ul>
                @foreach (var ex in analyse.ExercicesFort)
                {
                    <li>@ex</li>
                }
            </ul>
        </div>
        <div class="col-md-6">
            <h4>⚠️ Exercices les plus faibles</h4>
            <ul>
                @foreach (var ex in analyse.ExercicesFaible)
                {
                    <li>@ex</li>
                }
            </ul>
        </div>
    </div>

    <hr />

    <TestLineChart />

    <!-- 📊 Intégration du composant graphique -->
    if (analyse != null && entries.Any())
    {
        <GraphiqueLine Entries="entries" Analyse="analyse" Width="800" Height="400" />
    }
}

@code {
    private List<PoidsEntry> entries = new();
    private PoidsAnalysisResult? analyse;

    protected override async Task OnInitializedAsync()
    {
        entries = await PoidsService.GetEntriesAsync();
        analyse = PoidsAnalyzer.Analyser(entries);
    }
}
