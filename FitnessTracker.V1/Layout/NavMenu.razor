@inject AuthService AuthService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FitnessTracker</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
      
        @if (role == "user" )
        {
            @*  <NavLink class="nav-link" href="graph">
            <span class="oi oi-graph"></span> Graphiques
        </NavLink> *@
            <NavLink class="nav-link" href="/analyse">
                <span class="oi oi-bar-chart" aria-hidden="true"></span> Analyse
            </NavLink>
            
            <NavLink class="nav-link" href="/generate-programme">
                <span class="bi bi-list-nested-nav-menu"></span> Générateur
            </NavLink>
            <NavLink class="nav-link" href="/view-session">
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard-check" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0" />
                        <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1z" />
                        <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0z" />
                    </svg>
                </span> Voir Séance
            </NavLink>
           
            <NavLink class="nav-link" href="/mon-profil">
                <span class="bi bi-clipboard-check"></span> Mon profil
            </NavLink>
            
            <NavLink class="nav-link" href="/create-programme">
                <span class="bi bi-clipboard-check"></span> Créer un programme manuel
            </NavLink>
        }
        @if (role == "admin" || role == "coach")
        {
            <NavLink href="/dashboard">⚙️ Tableau de bord</NavLink>
            <NavLink class="nav-link" href="/Exercices">
                <span class="oi oi-bar-chart" aria-hidden="true"></span> Gestion Exercices
            </NavLink>
            <NavLink class="nav-link" href="/gestion_poids">
                <span class="bi bi-clipboard-check"></span> gestion poids
            </NavLink>
        }
        @if (role == "admin")
        {
            <NavLink href="/gestion-utilisateurs">👥 Gérer utilisateurs</NavLink>
            <NavLink href="/dashboard">⚙️ Tableau de bord</NavLink>
        }
    </nav>
</div>

@code {

    private string role = "user";

    protected override async Task OnInitializedAsync()
    {
        role = await AuthService.GetCurrentUserRoleAsync();
    }
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
